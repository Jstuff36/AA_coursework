<h1>Come on Morty</h1>

<p> <%= @link.title %> </p>
<p> <%= @link.url %> </p>
<p> <%= @link.user.username %> </p>

<%= link_to "Links", links_url, method: :get %>
<%= link_to "Edit Link", edit_link_url(@link), method: :get %>

<h2>Comments</h2>
<ul>
  <% @link.comments.each do |comment| %>
    <li>
      <%= comment.body %>
      <%= button_to "Remove Comment", comment_url(comment), method: :delete %>
    </li>
  <% end %>
</ul>

<h2>Add Comment</h2>
<form action="<%= comments_url %>" method="post">
  <input type="hidden" name="comment[link_id]" value="<%= @link.id %>">
  <%= auth_token_input %>
  <label>Comment
    <input type="text" name="comment[body]">
  </label>
  <input type="submit" value="Add Comment">
</form>
